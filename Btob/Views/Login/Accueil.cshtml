        <div id="resultsContainer">
            <div class="product-list" id="productList"></div>
        </div>
    </main>

    <div id="result"></div>

    <!-- Modale d'ajout de produit -->
    <div class="modal fade" id="Add" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">
                    <h4 class="modal-title custom_align" id="Heading">Ajouter cet article</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                </div>

                <div class="modal-body">

                    <!-- Champs cachés -->
                    <input id="RefAdd" type="hidden">
                    <input id="desAdd" type="hidden">
                    <input id="PrixAdd" type="hidden">

                    <div class="form-group text-center">
                        <label for="qteAdd">Quantité</label>
                        <div class="input-group justify-content-center">
                            <div class="input-group-prepend">
                                <button type="button" class="btn btn-danger btn-number" onclick="changeQty(-1)">
                                    <span class="glyphicon glyphicon-minus"></span>
                                </button>
                            </div>
                            <input type="text" id="qteAdd" class="form-control text-center" value="1" min="1" max="100" style="max-width: 80px;">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-success btn-number" onclick="changeQty(1)">
                                    <span class="glyphicon glyphicon-plus"></span>
                                </button>
                            </div>
                        </div>
                    </div>

                </div>

                <div class="modal-footer d-flex justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span> Annuler
                    </button>
                    <button type="button" onclick="AddItem()" class="btn btn-success" data-dismiss="modal">
                        <span class="glyphicon glyphicon-ok-sign"></span> Ajouter au panier
                    </button>
                </div>

            </div>
        </div>
    </div>



    <script>
        function changeQty(delta) {
            let input = document.getElementById("qteAdd");
            let value = parseInt(input.value) || 1;
            let newValue = Math.max(1, Math.min(100, value + delta));
            input.value = newValue;
        }
        let currentPage = 1;
        const itemsPerPage = 4;
        let searchResults = [];

        $(document).ready(function () {

            $('#recherche').click(function (e) {
                e.preventDefault();
                currentPage = 1;
                doSearch();
            });

            $('#rechercher').keypress(function (e) {
                if (e.which === 13) {
                    e.preventDefault();
                    currentPage = 1;
                    doSearch();
                }
            });

            function doSearch() {
                const searchTerm = $('#rechercher').val().trim();
                const productList = $('#productList');
                $('#result').html("");

                if (!searchTerm) {
                    productList.html('<div class="alert alert-info">Veuillez entrer un terme de recherche</div>');
                    return;
                }

                productList.html('<div class="text-center"><i class="fas fa-spinner fa-spin fa-2x"></i> Recherche en cours...</div>');

                $.ajax({
                    url: '/Login/Recherche',
                    type: 'GET',
                    data: { id: searchTerm },
                    success: function (data) {
                        if (data.error || data.length === 0) {
                            showNoResults(data.error || 'Aucun résultat trouvé');
                        } else {
                            searchResults = Array.isArray(data) ? data : [data];
                            displayResults();
                        }
                    },
                    error: function () {
                        showNoResults('Erreur lors de la recherche');
                    }
                });
            }

            function displayResults() {
                $('#result').html("");
                const productList = $('#productList');
                productList.empty();

                if (searchResults.length === 0) {
                    showNoResults('Aucun résultat');
                    $('#paginationControls').empty();
                    return;
                }

                const startIndex = (currentPage - 1) * itemsPerPage;
                const endIndex = Math.min(startIndex + itemsPerPage, searchResults.length);
                const pageItems = searchResults.slice(startIndex, endIndex);

                pageItems.forEach(item => {
                    const isAvailable = item.Disponible === '1';
                    productList.append(`
                                            <div class="product-item">
                                                <div class="product-image">
                                                    <img src="(item['N°'] || 'Produit')}" >
                                                    <span class="product-badge ${isAvailable ? 'bg-success' : 'bg-danger'}">
                                                        ${isAvailable ? 'Disponible' : 'Rupture'}
                                                    </span>
                                                </div>
                                                <div class="product-content">
                                                    <div class="product-header">
                                                        <h3 class="product-title">${item.Description || 'Sans description'}</h3>
                                                        <div class="product-price">${item['Prix unitaire'] || '0,00'} €</div>
                                                    </div>
                                                    <div class="product-meta">
                                                        <div class="product-ref">Référence: ${item['N°'] || 'N/A'}</div>
                                                        <div class="product-actions">
                                                            <button
                                                                class="btn btn-sm btn-primary open-add-modal"
                                                                data-toggle="modal"
                                                                data-target="#Add"
                                                                data-ref="${item['N°']}"
                                                                data-desc="${item.Description}"
                                                                data-price="${item['Prix unitaire']}"
                                                                ${!isAvailable ? 'disabled' : ''}>
                                                                <i class="fas fa-cart-plus"></i> Ajouter
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        `);
                });

                updatePagination();
            }

            function updatePagination() {
                const totalPages = Math.ceil(searchResults.length / itemsPerPage);
                const pagination = $('#paginationControls');
                pagination.empty();
                $('#result').html("");

                if (totalPages <= 1) return;

                pagination.append(`
                                        <li class="page-item ${currentPage === 1 ? 'disabled' : ''}">
                                            <a class="page-link" href="#" data-page="${currentPage - 1}">&laquo;</a>
                                        </li>
                                    `);

                for (let i = 1; i <= totalPages; i++) {
                    pagination.append(`
                                            <li class="page-item ${currentPage === i ? 'active' : ''}">
                                                <a class="page-link" href="#" data-page="${i}">${i}</a>
                                            </li>
                                        `);
                }

                pagination.append(`
                                        <li class="page-item ${currentPage === totalPages ? 'disabled' : ''}">
                                            <a class="page-link" href="#" data-page="${currentPage + 1}">&raquo;</a>
                                        </li>
                                    `);

                $('.page-link').click(function (e) {
                    e.preventDefault();
                    const newPage = parseInt($(this).data('page'));
                    if (newPage !== currentPage && newPage >= 1 && newPage <= totalPages) {
                        currentPage = newPage;
                        $('#result').html("");
                        displayResults();
                        $('html, body').animate({ scrollTop: 0 }, 'smooth');
                    }
                });
            }

            function showNoResults(message) {
                $('#result').html("");
                $('#productList').html(`
                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle"></i> ${message || 'Aucun résultat trouvé'}
                                        </div>
                                    `);
                $('#paginationControls').empty();
            }

            $(document).on('click', '.open-add-modal', function () {
                const ref = $(this).data('ref');
                const desc = $(this).data('desc');
                let price = $(this).data('price');

                // Formatage du prix si nécessaire
                if (typeof price === 'string') {
                    price = price.replace(',', '.');
                }

                $('#RefAdd').val(ref);
                $('#desAdd').val(desc);
                $('#PrixAdd').val(price);
                $('#qteAdd').val(1); // Réinitialise la quantité à 1
            });
        });


    </script>

</body>
