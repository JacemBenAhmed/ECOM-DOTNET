<script>
    function AddItem() {
        const ref = $('#RefAdd').val().trim();
        const description = $('#desAdd').val().trim();
        const prix = $('#PrixAdd').val().replace(',', '.');
        const quantite = $('#qteAdd').val().trim();

        if (!ref || !description || !prix || !quantite) {
            showToast('Veuillez remplir tous les champs', 'error');
            return;
        }

        if (isNaN(parseFloat(prix)) {
            showToast('Le prix n\'est pas un nombre valide', 'error');
            return;
        }

        if (!/^\d+$/.test(quantite) || parseInt(quantite) <= 0) {
            showToast('La quantité doit être un nombre entier positif', 'error');
            return;
        }

        const dataToSend = {
            reference: ref,
            description: description,
            prix: parseFloat(prix).toFixed(2),
            quantite: parseInt(quantite)
        };

        $.ajax({
            type: 'POST', 
            url: '../Login/AddToCart',
            dataType: 'json',
            data: dataToSend,
            success: function (response) {
                if (response && response.Success) {
                    document.getElementById("result").innerHTML = response.TotalQuantity;
                    document.getElementById("nbreLignes").innerHTML = response.TotalQuantity;

                    RefreshCartTable(response.CartItems);

                    showToast('Article ajouté au panier', 'success');
                } else {
                    showToast(response?.Message || 'Erreur lors de l\'ajout', 'error');
                }
            },
            error: function (xhr) {
                showToast('Erreur serveur: ' + (xhr.responseJSON?.Message || xhr.statusText), 'error');
            }
        });
    }

    function RefreshCartTable(cartItems) {
        const tableBody = $('#mytable tbody');
        tableBody.empty();

        if (cartItems && cartItems.length > 0) {
            cartItems.forEach(item => {
                tableBody.append(`
                <tr>
                    <td>${item.Reference}</td>
                    <td>${item.Description}</td>
                    <td>${item.Prix.toFixed(2)}</td>
                    <td>${item.Quantite}</td>
                    <td>${(item.Prix * item.Quantite).toFixed(2)}</td>
                    <td>
                        <button class="btn btn-danger btn-sm" onclick="RemoveItem('${item.Reference}')">
                            Supprimer
                        </button>
                    </td>
                </tr>
            `);
            });
        }
    }

    function RemoveItem(reference) {
        $.post('../Login/RemoveFromCart', { reference: reference })
            .done(function (response) {
                if (response.Success) {
                    RefreshCartTable(response.CartItems);
                    document.getElementById("nbreLignes").innerHTML = response.TotalQuantity;
                    showToast('Article supprimé', 'success');
                } else {
                    showToast(response.Message, 'error');
                }
            })
            .fail(function (xhr) {
                showToast('Erreur: ' + xhr.responseJSON?.Message, 'error');
            });
    }

    function showToast(message, type) {
        const toast = $(`
    <div class="toast align-items-center text-white bg-${type === 'success' ? 'success' : 'danger'} border-0 position-fixed bottom-0 end-0 m-3" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                ${message}
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>`);

        $('body').append(toast);
        new bootstrap.Toast(toast[0]).show();
        toast.on('hidden.bs.toast', () => toast.remove());
    }
</script>





