@model Btob.Models.LogOnModel

@section hero {
    <h1 class="heading-1 mb-3">Bienvenue sur B2B Portal</h1>
    <p class="text-lg text-neutral-100">Votre plateforme de gestion commerciale</p>
}

<div class="container" style="margin-top: -60px;">
    <div class="card animate-fade-in-up" style="max-width: 450px; margin: 0 auto;">
        <div class="flex flex-col gap-lg">
            <div class="text-center">
                <h2 class="heading-2 text-primary-600">Connexion</h2>
                <p class="text-md text-neutral-600 mt-2">Accédez à votre espace personnel</p>
            </div>

            @using (Html.BeginForm("Logpost", "Login", FormMethod.Post, new { @class = "flex flex-col gap-md" }))
            {
                <div class="form-group">
                    <label class="form-label">Nom d'utilisateur</label>
                    @Html.TextBoxFor(m => m.UserName, new { 
                        @class = "form-input",
                        required = "required",
                        placeholder = "Entrez votre nom d'utilisateur",
                        autocomplete = "username"
                    })
                </div>

                <div class="form-group">
                    <label class="form-label">Mot de passe</label>
                    @Html.TextBoxFor(m => m.Password, new { 
                        @class = "form-input",
                        type = "password",
                        required = "required",
                        placeholder = "Entrez votre mot de passe",
                        autocomplete = "current-password"
                    })
                </div>

                @if (!string.IsNullOrEmpty(Request.Cookies["msgErreur"]?.Value))
                {
                    <div class="alert alert-danger animate-shake">
                        <i class="fas fa-exclamation-circle"></i>
                        @Request.Cookies["msgErreur"].Value
                    </div>
                }

                <button type="submit" class="btn btn-primary hover-lift">
                    <i class="fas fa-sign-in-alt mr-2"></i>
                    Se connecter
                </button>

                <div class="flex justify-between items-center">
                    <a href="#" class="text-sm text-primary-600 hover-bright">Mot de passe oublié ?</a>
                    <a href="#" class="text-sm text-primary-600 hover-bright">Créer un compte</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, var(--primary-600), var(--primary-800));
        min-height: 100vh;
    }

    .container {
        padding: var(--space-xl) var(--space-md);
    }

    /* Custom animations for the login page */
    .card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.95);
    }

    .form-input:focus {
        transform: translateY(-1px);
    }

    .btn-primary {
        background: linear-gradient(to right, var(--primary-600), var(--primary-700));
    }

    .btn-primary:hover {
        background: linear-gradient(to right, var(--primary-700), var(--primary-800));
    }

    /* Responsive adjustments */
    @media (max-width: 480px) {
        .container {
            padding: var(--space-lg) var(--space-sm);
        }

        .card {
            margin: 0 var(--space-sm);
        }
    }
</style>