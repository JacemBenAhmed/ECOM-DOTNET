    <script>
    function Verif() {
        //var res=$(".name2").val();
        //var res2= $('#name').val();

        var result = document.getElementById('result');
        var LOG = document.getElementById("name").value;
        var Pass = document.getElementById("pwd").value;
        $.ajax({
            type: 'POST',
            url: '../Login/VerifLogin',
            dataType: 'json',
            async: false,
            data: {
                login: LOG,
                password: Pass
            },
            success: function (data) {
                if (data == 'true') {
                    //alert(data);
                    window.location.href = '/Login/Accueil';
                }

                else {
                    result.innerHTML = " Veuillez saisir votre identifiant.";
                }
            }

        });
    }

    </script>

