<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-alpha.4/css/bootstrap.css">
<div class="container">
    <div class="login-form col-md-4 offset-md-4">
        <h1 class="title">Authentification</h1>
        @model Btob.Models.LogOnModel
      @using (Html.BeginForm("Logpost", "Login", FormMethod.Post))
    {
            <div class="form-group">
                <label>Utilisateur</label>
               @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
              
            </div>
            <div class="form-group">
                <label>Mot de passe</label>
               @Html.TextBoxFor(m => m.Password, new { @class = "form-control", Type = "password" })
   </div>

            <div class="form-group">
                <input type="checkbox">Remember me
            </div>
            <button class="btn btn-primary btn-block">login</button>
      }
    </div>
</div>
